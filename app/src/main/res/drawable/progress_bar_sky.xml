<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background -->
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="#777" />
        </shape>
    </item>

    <!-- Progress -->
    <item android:id="@android:id/progress">
        <layer-list>
            <!-- Gradient -->
            <item>
                <clip
                    android:clipOrientation="vertical"
                    android:gravity="bottom">
                    <shape>
                        <gradient
                            android:angle="90"
                            android:centerColor="#1E90FF"
                            android:endColor="#0000FF"
                            android:startColor="#23F46F" />
                    </shape>
                </clip>
            </item>

            <!-- Lines -->
            <item>
                <clip
                    android:clipOrientation="vertical"
                    android:gravity="fill">
                    <layer-list>

                        <item android:top="140dp">
                            <shape android:shape="line">
                                <stroke
                                    android:width="2dp"
                                    android:color="@color/white" />
                            </shape>
                        </item>

                        <item android:top="70dp">
                            <shape android:shape="line">
                                <stroke
                                    android:width="2dp"
                                    android:color="@color/white" />
                            </shape>
                        </item>
                        <item android:top="0dp">
                            <shape android:shape="line">
                                <stroke
                                    android:width="2dp"
                                    android:color="@color/white" />
                            </shape>
                        </item>

                        <item android:bottom="140dp">
                            <shape android:shape="line">
                                <stroke
                                    android:width="2dp"
                                    android:color="@color/white" />
                            </shape>
                        </item>

                        <item android:bottom="70dp">
                            <shape android:shape="line">
                                <stroke
                                    android:width="2dp"
                                    android:color="@color/white" />
                            </shape>
                        </item>
                    </layer-list>
                </clip>
            </item>
        </layer-list>
    </item>
</layer-list>
